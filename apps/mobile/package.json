{
  "name": "@ultimate/mobile",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "scripts": {
    "dev": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "build": "expo export --output-dir ./build --platform all",
    "eas-build-pre-install": "npm install --global pnpm@7.x",
    "eas-build-post-install": "pnpm run -w build:mobile",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "test": "jest"
  },
  "dependencies": {
    "@expo/metro-runtime": "~3.2.1",
    "expo": "~51.0.18",
    "expo-status-bar": "~1.12.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.2",
    "react-native-web": "~0.19.12",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@babel/core": "^7.24.7",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^12.5.1",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.3.3",
    "@types/react-native": "~0.73.0",
    "@types/react-test-renderer": "^18.3.0",
    "@ultimate/eslint-config": "workspace:*",
    "@ultimate/tsconfig": "workspace:*",
    "babel-plugin-inline-dotenv": "^1.7.0",
    "babel-plugin-root-import": "^6.6.0",
    "jest": "^29.7.0",
    "react-test-renderer": "^18.3.1",
    "ts-jest": "^29.1.5"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@ultimate/eslint-config/react"
    ]
  }
}
